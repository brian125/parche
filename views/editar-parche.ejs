<main class="contenedor contenedor-formularios">
    <h1><%- nombrePagina %></h1>
    <form class="default-form" method="POST">
        <legend>Sobre el parche</legend>
        <div class="campo">
            <label>Grupo</label>
            <select name="grupoId">
                <option value="" disabled selected>-- Selecciona Grupo --</option>
                <% if(grupos.length > 0){ %>
                    <% grupos.forEach(grupo => { %>
                        <option <%= (parches.grupoId === grupo.id) ? 'selected' : '' %>  value="<%= grupo.id %> "><%= grupo.nombre %> </option>
                    <% }) %> 
                <% } %> 
            </select>
        </div>
        <div class="campo">
            <label>Titulo</label>
            <input type="text" name="titulo" value="<%= parches.titulo %>">
        </div>
        <div class="campo">
            <label>Invitado</label>
            <input type="text" name="invitado" value="<%= parches.invitado %>">
        </div>
        <div class="columnas-2 grid">
            <div class="campo">
                <label>Fecha</label>
                <input type="date" name="fecha" value="<%= parches.fecha %>">
            </div>
            <div class="campo">
                <label>Hora</label>
                <input type="time" name="hora" value="<%= parches.hora %>">
            </div>
        </div>
        <div class="campo">
            <label>Cupo</label>
            <input type="number" min="1" name="cupo" value="<%= parches.cupo %>">
        </div>
        <div class="campo descripcion">
            <label>Descripción</label>
            <div class="contenedor-editor">
                <input type="hidden" id="x" name="descripcion" value="<%= parches.descripcion %>">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>
        <legend>Ubicación Parche</legend>
        <div class="campo buscador">
            <label>Coloca la Dirección del Parche</label>
            <div class="contenedor-input">
                <input type="text" id="formbuscador" placeholder="Ubicación">
                <small>El asistente colocará una dirección estimada</small>
            </div>
        </div>

        <div class="campo contenedor-mapa">
            <div id="map"></div>
            <!-- <p class="informacion">Mueve el pun hacia el punto exacto en caso de ser necesario</p> -->
        </div>
        
        <p class="informacion">Confirma que los siguientes campos sean correctos:</p>

        <div class="campo">
            <label>Dirección</label>
            <input type="text" id="direccion" name="direccion" value="<%= parches.direccion %>">
        </div>

        <div class="campo">
            <label>Ciudad</label>
            <input type="text" id="ciudad" name="ciudad" value="<%= parches.ciudad %>">
        </div>

        <div class="campo">
            <label>Estado</label>
            <input type="text" id="estado" name="estado" value="<%= parches.estado %>">
        </div>
        <div class="campo">
            <label>País</label>
            <input type="text" id="pais" name="pais" value="<%= parches.pais %>">
        </div>
            <input type="hidden" id="lat" name="lat" readonly="readonly" value="<%= parches.ubicacion.coordinates[0] %>">
            <input type="hidden" id="lng" name="lng" readonly="readonly" value="<%= parches.ubicacion.coordinates[1] %>">
        <div class="campo enviar">
            <input type="submit" class="btn btn-rosa" value="Guardar Cambios">
        </div>        
    </form>
</main>